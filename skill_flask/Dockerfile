#
# First Flask App Dockerfile
#
#
#

#Pull base image.
FROM  centos:7.0.1406

# Build commands
RUN yum install -y python-setuptools mysql-connector-python mysql-devel gcc python-devel
RUN easy_install pip
RUN mkdir /opt/flask-intro
WORKDIR /op/flask-intro
ADD requirements.txt /opt/flask-intro/
RUN pip install -r  requirements.txt
ADD . /opt/flask-intro

# Define working directory.
WORKDIR  /opt/flask-intro

#define default command.
CMD ["python", "hello.py"]

#Expose ports.
EXPOSE 5000




>>docker build -t flask-intro
>>docker run -d -p 5000:5000  -v /User/jorge/flask-intro:/opt/flask-intro --name web flask-intro